{
  "name": "design-system-rebrand",
  "version": "0.2.0",
  "author": "The University of Melbourne",
  "description": "UI Kit for 2017 Melbourne University rebrand",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unimelb/design-system-rebrand.git"
  },
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.3.0"
  },
  "scripts": {
    "start": "bundle exec middleman",
    "lint:css": "stylelint assets/**/*.css",
    "lint:js": "eslint assets/**/*.js",
    "lint": "concurrently \"npm run lint:js\" \"npm run lint:css\"",
    "prebuild:css": "mkdir -p .tmp/build/stylesheets",
    "prebuild:js": "mkdir -p .tmp/build/javascripts",
    "build:css": "postcss -c postcss.json",
    "build:js": "browserify -t babelify -p [ minifyify --no-map ] -o .tmp/build/javascripts/main.js assets/scripts/index.js",
    "build": "concurrently \"npm run build:js\" \"npm run build:css\"",
    "prewatch:js": "mkdir -p .tmp/build/javascripts",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "watchify -t babelify -o .tmp/build/javascripts/main.js assets/scripts/index.js",
    "watch": "concurrently \"npm run watch:js\" \"npm run watch:css\""
  },
  "dependencies": {
    "classlist-polyfill": "unimelb/classlist-polyfill#1.1.20170228",
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "concurrently": "^3.1.0",
    "eslint": "^4.5.0",
    "minifyify": "^7.3.3",
    "postcss": "^6.0.10",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^10.0.0",
    "postcss-nested": "^2.1.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": ["es2015"]
  }
}
